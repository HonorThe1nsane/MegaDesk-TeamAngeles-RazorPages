@page
@model MegaDesk_RazorPages_TeamAngeles.Pages.Desks.IndexModel

@{
    ViewData["Title"] = "Desks";
}

<h1>Desks</h1>

<p>
    <a class="btn btn-primary" asp-page="Create">Create New</a>
</p>
<form>
    <p>
        Search: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.NameSort">
                    @Html.DisplayNameFor(model => model.Desk[0].CustomerName)
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Desk[0].DeskMaterial)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Desk[0].QuotePrice)
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.DateSort">
                    @Html.DisplayNameFor(model => model.Desk[0].QuoteDate)
                </a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Desk) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeskMaterial)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuotePrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuoteDate)
            </td>
            <td>
                <a class="btn btn-warning" asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a class="btn btn-info" asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a class="btn btn-danger" asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
